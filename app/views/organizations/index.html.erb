<h1>Listing articles</h1>
<%= link_to 'New organization', new_organization_path %>
<table>
    <tr>
        <th>Name</th>
        <th>Site</th>
        <th>Description</th>
    </tr>

    <% @organization.each do |organization| %>
        <tr>
            <td><%= organization.name %></td>
            <td><%= organization.site %></td>
            <td><%= organization.description %></td>
            <td><%= link_to 'Show', organization_path(organization) %></td>
            <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
            <td><%= link_to 'Destroy', organization_path(organization),
                            method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>